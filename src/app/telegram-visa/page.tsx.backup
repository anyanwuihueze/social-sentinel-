'use client';

import { useState, useEffect } from 'react';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import { Slider } from '@/components/ui/slider';
import {
  Select,
  SelectContent,
  SelectItem,
  SelectTrigger,
  SelectValue,
} from '@/components/ui/select';
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { X, BotMessageSquare, Activity, Users, MessageSquare, Loader2, RefreshCw } from 'lucide-react';
import { LogPanel } from '@/components/log-panel';
import { useToast } from '@/hooks/use-toast';

// API base URL - use your deployed backend
const API_BASE_URL = 'https://social-agents-1765342327.fly.dev';

export default function TelegramVisaPage() {
  const { toast } = useToast();
  const [keywords, setKeywords] = useState<string[]>([]);
  const [newKeyword, setNewKeyword] = useState('');
  const [sentiment, setSentiment] = useState([-0.3]);
  const [persona, setPersona] = useState('peer');
  const [isMonitoring, setIsMonitoring] = useState(false);
  const [loadingKeywords, setLoadingKeywords] = useState(true);
  const [loadingAdd, setLoadingAdd] = useState(false);
  const [loadingRemove, setLoadingRemove] = useState<string | null>(null);
  const [stats, setStats] = useState({
    totalMessages: 0,
    totalReplies: 0,
    leadsGenerated: 0,
    status: 'stopped',
    activeKeywords: 0,
    keywordExamples: [] as string[]
  });

  // ===== NEW: Fetch keywords from backend =====
  useEffect(() => {
    fetchKeywords();
    // Fetch stats every 5 seconds
    const statsInterval = setInterval(fetchStats, 5000);
    return () => clearInterval(statsInterval);
  }, []);

  const fetchKeywords = async () => {
    try {
      setLoadingKeywords(true);
      const response = await fetch(`${API_BASE_URL}/api/keywords`);
      const data = await response.json();
      
      if (data.success) {
        setKeywords(data.keywords);
      } else {
        toast({
          variant: 'destructive',
          title: 'Error',
          description: 'Failed to load keywords',
        });
      }
    } catch (error) {
      console.error('Failed to fetch keywords:', error);
      toast({
        variant: 'destructive',
        title: 'Connection Error',
        description: 'Could not connect to backend server',
      });
    } finally {
      setLoadingKeywords(false);
    }
  };

  const fetchStats = async () => {
    try {
      const response = await fetch(`${API_BASE_URL}/stats`);
      const data = await response.json();
      if (data.success) {
        setStats({
          ...data.stats,
          activeKeywords: keywords.length,
          keywordExamples: keywords.slice(0, 3)
        });
        setIsMonitoring(data.stats.status === 'connected');
      }
    } catch (error) {
      console.error('Failed to fetch stats:', error);
    }
  };

  // ===== NEW: Add keyword with backend API =====
  const handleAddKeyword = async () => {
    if (!newKeyword.trim()) return;
    
    setLoadingAdd(true);
    try {
      const response = await fetch(`${API_BASE_URL}/api/keywords`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ keyword: newKeyword })
      });
      
      const data = await response.json();
      
      if (data.success) {
        setKeywords(data.keywords);
        setNewKeyword('');
        toast({
          title: '‚úÖ Keyword Added',
          description: `"${newKeyword}" is now being monitored`,
        });
      } else {
        toast({
          variant: 'destructive',
          title: 'Error',
          description: data.error || 'Failed to add keyword',
        });
      }
    } catch (error) {
      toast({
        variant: 'destructive',
        title: 'Connection Error',
        description: 'Could not add keyword to server',
      });
    }
    setLoadingAdd(false);
  };

  // ===== NEW: Remove keyword with backend API =====
  const handleRemoveKeyword = async (keywordToRemove: string) => {
    setLoadingRemove(keywordToRemove);
    try {
      const response = await fetch(`${API_BASE_URL}/api/keywords/${encodeURIComponent(keywordToRemove)}`, {
        method: 'DELETE',
      });
      
      const data = await response.json();
      
      if (data.success) {
        setKeywords(data.keywords);
        toast({
          title: 'üóëÔ∏è Keyword Removed',
          description: `"${keywordToRemove}" is no longer monitored`,
        });
      } else {
        toast({
          variant: 'destructive',
          title: 'Error',
          description: data.error || 'Failed to remove keyword',
        });
      }
    } catch (error) {
      toast({
        variant: 'destructive',
        title: 'Connection Error',
        description: 'Could not remove keyword from server',
      });
    }
    setLoadingRemove(null);
  };

  // ===== UPDATED: Start monitor with current keywords =====
  const handleStartMonitor = async () => {
    try {
      // First update config with current keywords and settings
      const response = await fetch(`${API_BASE_URL}/config`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ 
          keywords, 
          sentiment: sentiment[0], 
          persona 
        }),
      });

      if (!response.ok) {
        throw new Error('Failed to update config');
      }

      // Then start the agent
      const startResponse = await fetch(`${API_BASE_URL}/start`);
      
      if (startResponse.ok) {
        setIsMonitoring(true);
        toast({
          title: 'üéâ Agent Started!',
          description: `Monitoring ${keywords.length} keywords with ${persona} persona`,
        });
        
        // Refresh stats to get updated status
        fetchStats();
      } else {
        throw new Error('Failed to start agent');
      }
    } catch (error) {
      toast({
        variant: 'destructive',
        title: 'Error',
        description: 'Could not start agent. Check console for details.',
      });
    }
  };

  // ===== NEW: Refresh keywords button =====
  const handleRefreshKeywords = () => {
    fetchKeywords();
    toast({
      title: 'üîÑ Refreshing',
      description: 'Fetching latest keywords from server',
    });
  };

  return (
    <div className="container mx-auto px-4 py-12">
      <div className="text-center mb-8">
        <BotMessageSquare className="h-12 w-12 text-primary mx-auto mb-2" />
        <h1 className="text-4xl font-bold tracking-tighter font-headline">
          Telegram Visa Agent
        </h1>
        <p className="text-lg text-muted-foreground mt-2">
          AI-powered peer helping visa applicants in real-time
        </p>
      </div>

      {/* Stats Cards - UPDATED to show keyword count */}
      <div className="grid grid-cols-1 md:grid-cols-5 gap-4 mb-8">
        <Card>
          <CardContent className="pt-6">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm font-medium text-muted-foreground">Status</p>
                <p className="text-2xl font-bold">
                  {stats.status === 'connected' ? 'üü¢ Live' : '‚ö™ Stopped'}
                </p>
              </div>
              <Activity className="h-8 w-8 text-muted-foreground" />
            </div>
          </CardContent>
        </Card>

        <Card>
          <CardContent className="pt-6">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm font-medium text-muted-foreground">Messages</p>
                <p className="text-2xl font-bold">{stats.totalMessages}</p>
              </div>
              <MessageSquare className="h-8 w-8 text-muted-foreground" />
            </div>
          </CardContent>
        </Card>

        <Card>
          <CardContent className="pt-6">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm font-medium text-muted-foreground">Replies</p>
                <p className="text-2xl font-bold">{stats.totalReplies}</p>
              </div>
              <BotMessageSquare className="h-8 w-8 text-muted-foreground" />
            </div>
          </CardContent>
        </Card>

        <Card>
          <CardContent className="pt-6">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm font-medium text-muted-foreground">Leads</p>
                <p className="text-2xl font-bold">{stats.leadsGenerated}</p>
              </div>
              <Users className="h-8 w-8 text-muted-foreground" />
            </div>
          </CardContent>
        </Card>

        <Card>
          <CardContent className="pt-6">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm font-medium text-muted-foreground">Keywords</p>
                <p className="text-2xl font-bold">{keywords.length}</p>
              </div>
              <Button
                variant="ghost"
                size="sm"
                className="p-1"
                onClick={handleRefreshKeywords}
                title="Refresh keywords"
              >
                <RefreshCw className="h-8 w-8 text-muted-foreground hover:text-primary transition-colors" />
                <span className="sr-only">Refresh keywords</span>
              </Button>
            </div>
          </CardContent>
        </Card>
      </div>

      <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div className="lg:col-span-2 space-y-8">
          <Card>
            <CardHeader>
              <CardTitle className="flex items-center justify-between">
                <span>Agent Configuration</span>
                {loadingKeywords && (
                  <Loader2 className="h-4 w-4 animate-spin" />
                )}
              </CardTitle>
              <CardDescription>Configure your AI agent's behavior</CardDescription>
            </CardHeader>
            <CardContent className="space-y-6">
              <div className="space-y-2">
                <div className="flex items-center justify-between">
                  <Label>Keywords to Monitor ({keywords.length})</Label>
                  <Button 
                    variant="ghost" 
                    size="sm" 
                    onClick={handleRefreshKeywords}
                    className="h-8 px-2"
                  >
                    <RefreshCw className="h-3 w-3 mr-1" />
                    Refresh
                  </Button>
                </div>
                
                {loadingKeywords ? (
                  <div className="flex items-center justify-center py-4">
                    <Loader2 className="h-6 w-6 animate-spin" />
                    <span className="ml-2">Loading keywords...</span>
                  </div>
                ) : keywords.length === 0 ? (
                  <div className="text-center py-4 border rounded-md bg-muted/50">
                    <p className="text-sm text-muted-foreground">No keywords yet. Add your first keyword below!</p>
                  </div>
                ) : (
                  <div className="flex flex-wrap gap-2">
                    {keywords.map((keyword) => (
                      <Badge key={keyword} variant="secondary" className="text-base group">
                        {keyword}
                        <button 
                          onClick={() => handleRemoveKeyword(keyword)} 
                          className="ml-2"
                          disabled={loadingRemove === keyword}
                        >
                          {loadingRemove === keyword ? (
                            <Loader2 className="h-3 w-3 animate-spin" />
                          ) : (
                            <X className="h-3 w-3" />
                          )}
                        </button>
                      </Badge>
                    ))}
                  </div>
                )}
                
                <div className="flex gap-2 pt-2">
                  <Input
                    placeholder="Add a keyword (e.g., passport, schengen)"
                    value={newKeyword}
                    onChange={(e) => setNewKeyword(e.target.value)}
                    onKeyDown={(e) => e.key === 'Enter' && handleAddKeyword()}
                    disabled={loadingAdd}
                  />
                  <Button 
                    onClick={handleAddKeyword} 
                    variant="outline"
                    disabled={loadingAdd || !newKeyword.trim()}
                  >
                    {loadingAdd ? (
                      <>
                        <Loader2 className="mr-2 h-4 w-4 animate-spin" />
                        Adding...
                      </>
                    ) : 'Add'}
                  </Button>
                </div>
                <p className="text-xs text-muted-foreground">
                  Agent listens for these keywords in Telegram messages
                </p>
              </div>
              
              <div className="space-y-2">
                <Label htmlFor="sentiment">Reply to Frustration Level</Label>
                <Slider
                  id="sentiment"
                  min={-1}
                  max={0}
                  step={0.1}
                  value={sentiment}
                  onValueChange={setSentiment}
                />
                <div className="flex justify-between text-sm text-muted-foreground">
                  <span>Very Frustrated</span>
                  <span>Current: {sentiment[0]}</span>
                  <span>Neutral</span>
                </div>
              </div>

              <div className="space-y-2">
                <Label htmlFor="persona">Agent Persona</Label>
                <Select value={persona} onValueChange={setPersona}>
                  <SelectTrigger id="persona">
                    <SelectValue placeholder="Select Persona" />
                  </SelectTrigger>
                  <SelectContent>
                    <SelectItem value="peer">Peer (Casual, went through it)</SelectItem>
                    <SelectItem value="expert">Expert (Professional consultant)</SelectItem>
                    <SelectItem value="friendly">Friendly (Warm & supportive)</SelectItem>
                  </SelectContent>
                </Select>
              </div>
              
              <Button 
                onClick={handleStartMonitor} 
                disabled={isMonitoring || keywords.length === 0} 
                size="lg"
                className="w-full"
              >
                {isMonitoring ? (
                  <>
                    <Loader2 className="mr-2 h-4 w-4 animate-spin" />
                    üü¢ Agent Running
                  </>
                ) : `Start Agent (${keywords.length} keywords)`}
              </Button>
              
              {keywords.length === 0 && (
                <div className="rounded-md bg-destructive/15 p-3">
                  <p className="text-sm text-destructive">
                    ‚ö†Ô∏è Add at least one keyword before starting the agent
                  </p>
                </div>
              )}
            </CardContent>
          </Card>
          
          <LogPanel />
        </div>
        
        <div className="space-y-8">
          <Card>
            <CardHeader>
              <CardTitle>How It Works</CardTitle>
            </CardHeader>
            <CardContent className="space-y-4 text-sm">
              <div>
                <p className="font-medium mb-1">1Ô∏è‚É£ Monitoring</p>
                <p className="text-muted-foreground">Agent listens to all your Telegram groups 24/7</p>
              </div>
              <div>
                <p className="font-medium mb-1">2Ô∏è‚É£ Detection</p>
                <p className="text-muted-foreground">Finds people asking about visas with your keywords</p>
              </div>
              <div>
                <p className="font-medium mb-1">3Ô∏è‚É£ Analysis</p>
                <p className="text-muted-foreground">Checks frustration level (only helps frustrated users)</p>
              </div>
              <div>
                <p className="font-medium mb-1">4Ô∏è‚É£ Response</p>
                <p className="text-muted-foreground">AI replies naturally, softly nudges to your site</p>
              </div>
            </CardContent>
          </Card>

          <Card>
            <CardHeader>
              <CardTitle>Current Setup</CardTitle>
            </CardHeader>
            <CardContent className="space-y-2 text-sm">
              <div className="flex justify-between">
                <span className="text-muted-foreground">Persona:</span>
                <span className="font-medium capitalize">{persona}</span>
              </div>
              <div className="flex justify-between">
                <span className="text-muted-foreground">Active Keywords:</span>
                <span className="font-medium">{keywords.length}</span>
              </div>
              <div className="flex justify-between">
                <span className="text-muted-foreground">Sample Keywords:</span>
                <span className="font-medium text-right">
                  {keywords.slice(0, 3).join(', ')}
                  {keywords.length > 3 && '...'}
                </span>
              </div>
              <div className="flex justify-between">
                <span className="text-muted-foreground">Frustration Threshold:</span>
                <span className="font-medium">{sentiment[0]}</span>
              </div>
              <div className="flex justify-between">
                <span className="text-muted-foreground">AI Status:</span>
                <span className="font-medium">{isMonitoring ? 'üü¢ Live' : '‚ö™ Stopped'}</span>
              </div>
            </CardContent>
          </Card>

          {/* NEW: Quick Actions Card */}
          <Card>
            <CardHeader>
              <CardTitle>Quick Actions</CardTitle>
            </CardHeader>
            <CardContent className="space-y-3">
              <Button 
                variant="outline" 
                className="w-full justify-start"
                onClick={handleRefreshKeywords}
              >
                <RefreshCw className="mr-2 h-4 w-4" />
                Refresh Keywords
              </Button>
              <Button 
                variant="outline" 
                className="w-full justify-start"
                onClick={() => {
                  setNewKeyword('passport');
                  toast({
                    title: 'Keyword Suggestion',
                    description: '"passport" added to input field',
                  });
                }}
              >
                <BotMessageSquare className="mr-2 h-4 w-4" />
                Add "passport" keyword
              </Button>
              <Button 
                variant="outline" 
                className="w-full justify-start"
                onClick={() => {
                  setNewKeyword('schengen');
                  toast({
                    title: 'Keyword Suggestion',
                    description: '"schengen" added to input field',
                  });
                }}
              >
                <BotMessageSquare className="mr-2 h-4 w-4" />
                Add "schengen" keyword
              </Button>
            </CardContent>
          </Card>
        </div>
      </div>
    </div>
  );
}